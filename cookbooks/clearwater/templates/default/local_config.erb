# Per node configuration
<% if not @node[:clearwater][:index].nil? %>node_idx=<%= @node[:clearwater][:index] %><% end %>

# Local IP configuration
local_ip=<%= @node[:cloud][:local_ipv4] %>
public_ip=<%= @node[:cloud][:public_ipv4] %>
public_hostname=<%= @node[:cloud][:public_hostname] %>

# GR configuration
local_site_name=<%= @local_site %>
remote_site_names=<%= @remote_sites %>
remote_cassandra_seeds=<%= @remote_cassandra_nodes.map{|n| n.cloud.local_ipv4}.join "," %>

# etcd configuration
<%= @etcd_cluster_or_proxy %>=<%= @etcd.map{|n| n.cloud.local_ipv4}.join "," %>
<% if not @etcd_cluster_key.nil? %>etcd_cluster_key=<%= @etcd_cluster_key %><% end %>
